#https://github.com/adhocore/docker-phpfpm/blob/7.4/Dockerfile
FROM php:7.4-fpm
MAINTAINER Ilyes Abdelrazak <ia.beladel@gmail.com>

RUN \
	apt-get update && apt-get install -y \
    unzip \
    git \
    curl \
	wget \
    gettext imagemagick \
    libfreetype6-dev \
	libjpeg-dev \
	libmagickwand-dev \
	libmemcached-dev zlib1g-dev \
	libpng-dev \
	libzip-dev \
	libmcrypt-dev \
	libjpeg62-turbo-dev \
    libicu-dev \
	libxml2-dev \
	libgcrypt20-dev \
	libevent-dev libev-dev; \
	rm -Rf /var/lib/apt/lists/* 

# php extensions
RUN \
	docker-php-source extract \
    && pecl channel-update pecl.php.net \
    && cd /usr/src/php/ext/ \
    && pecl clear-cache \
  	&& docker-php-source delete \
   
# Clear cache
RUN apt-get clean && rm -rf /var/lib/apt/lists/*

# Install extensions
RUN docker-php-ext-install pdo pdo_mysql curl dom exif fileinfo hash json mbstring mysqli sodium openssl ftp sockets pcre imagick xml zip filter iconv mcrypt simplexml xmlreader zlib
RUN docker-php-ext-configure gd --with-gd --with-freetype-dir=/usr/include/ --with-jpeg-dir=/usr/include/ --with-png-dir=/usr/include/
RUN docker-php-ext-install gd

# Install composer
#RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

# Expose port 9000 and start php-fpm server
EXPOSE 9000
CMD ["php-fpm"]
